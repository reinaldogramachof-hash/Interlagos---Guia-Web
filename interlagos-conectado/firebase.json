{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "source": "functions",
    "runtime": "nodejs18",
    "region": "southamerica-east1",
    "schedule": [
      {
        "target": "cleanupDeletedUsers",
        "description": "Hard delete de usu√°rios inativos",
        "schedule": "every 24 hours"
      }
    ],
    "env": {
      "ALGOLIA_APP_ID": "secreto:algolia-app-id",
      "ALGOLIA_API_KEY": "secreto:algolia-api-key"
    }
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}